<!DOCTYPE html>
<html>
  <head>
    <title>Billspin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
			<% if current_user && current_user.guest? %>
				<%= link_to "Create Account", new_user_url %> | <%= link_to "Login", login_url %>
			<% else %>
				<span class="label label-success"> Logged in as </span> <%= current_user.email %>
				<br>
				<%= link_to "Profile", user_url(current_user) %>
				<br>
				<%= link_to "Logout", logout_url %>
			<% end %>
  </div>
  <%= yield %>
  <script>
  if (typeof billspin === "undefined") {
	billspin = {};
  }

  <% if current_user.guest? %>
	billspin.currentUserId = "You";
  <% else %>
	billspin.currentUserId = <%= current_user.id %>;
  <% end %>
</script>
</body>
</html>

